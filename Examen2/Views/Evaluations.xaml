<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Examen2.Views.Evaluations"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Examen2.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:Examen2.ViewModels"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Grid
        x:Name="root"
        Margin="15,12,0,0"
        RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="24">Évaluations</TextBlock>

        <!--  Nouvelle évaluation  -->
        <Button
            x:Name="btnAjout"
            Grid.Row="1"
            Content="Ajouter">
            <Button.Flyout>
                <Flyout x:Name="formAjout">
                    <StackPanel>
                        <TextBlock Grid.Row="0" FontSize="18">Nouvelle évaluation</TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox
                                Width="auto"
                                Margin="10"
                                HorizontalAlignment="Left"
                                DisplayMemberPath="NomComplet"
                                ItemsSource="{x:Bind ViewModel.Jeux}"
                                SelectedValue="{x:Bind ViewModel.NouvelleEvaluation.Jeu, Mode=TwoWay}" />
                            <RatingControl Value="{x:Bind ViewModel.NouvelleEvaluation.Note, Mode=TwoWay}" />
                        </StackPanel>
                        <TextBox
                            MinWidth="400"
                            MinHeight="100"
                            AcceptsReturn="True"
                            IsSpellCheckEnabled="True"
                            Text="{x:Bind ViewModel.NouvelleEvaluation.Description, Mode=TwoWay}"
                            TextWrapping="Wrap" />
                        <Button Click="AjouterEvaluation" Content="Confirmer" />
                    </StackPanel>
                </Flyout>
            </Button.Flyout>
        </Button>

        <!--  Liste des évaluations  -->
        <StackPanel Grid.Row="2">
            <GridView x:Name="liste" ItemsSource="{x:Bind ViewModel.Evaluations, Mode=OneWay}">
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Margin" Value="7,11" />
                    </Style>
                </GridView.ItemContainerStyle>

                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:EvaluationJeuViewModel">
                        <Grid
                            Width="300"
                            BorderBrush="Black"
                            BorderThickness="1">
                            <StackPanel
                                Height="100"
                                Padding="15"
                                VerticalAlignment="Bottom"
                                Orientation="Vertical">
                                <TextBlock Text="{x:Bind Jeu.Nom, Mode=OneWay}" />
                                <RatingControl HorizontalAlignment="Left" Value="{x:Bind Note, Mode=OneWay}" />
                                <TextBlock FontStyle="Italic" Text="{x:Bind Description, Mode=OneWay}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>

                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid MaximumRowsOrColumns="2" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>
            <Button Click="VoirFormModifEvaluation" Visibility="{x:Bind ViewModel.EvaluationEstSelectionnee, Mode=OneWay}">Modifier</Button>
        </StackPanel>

        <!--  Modifier une évaluation  -->
        <StackPanel
            x:Name="modifForm"
            Grid.Row="3"
            Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="18" Text="Modification " />
            </StackPanel>
            <Button Click="TerminerModif" Content="Fermer" />
        </StackPanel>
    </Grid>
</Page>
